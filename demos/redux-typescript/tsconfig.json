{
    "compilerOptions": {
        "lib": ["es2015", "es2015.promise", "es2017", "es2017.object", "dom"],
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "strict": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}